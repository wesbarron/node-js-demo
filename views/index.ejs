
<html>
  <head>
    <title> ToDo App </title>
    <link href="https://fonts.googleapis.com/css?family=Lato:100"     rel="stylesheet">
    <link type="text/css" href="/css/styles.css" rel="stylesheet">
  </head>
  <body>
    <div class="container">
       <h2> A Simple ToDo List App </h2>
       <form action ="/addtask" method="POST">
        <input type="text" name="newtask" placeholder="add new task">        <button> Add Task </button>
        <h2> Added Task </h2>

        <% for(var i = 0; i < task.length; i++){ %>
            <li><input id="is-checked" type="checkbox" name="check" value="<%= task[i] %>" /><%= task[i] %></li>
        <% } %>

        <button formaction="/removetask" type="submit"> Remove </button>
      </form>
      <h2> Completed task </h2>
        <% for(var i = 0; i < task.length; i++){ %>
            <h3 id="completedTask"></h3>
        <% } %>

    </div>

    <script>
    document.getElementById("is-checked").addEventListener("click", checkList);

    function checkList(){
        var result = document.getElementById("is-checked").checked;
        var replace = document.getElementById("completedTask");

        if(result == true){
            replace.innerHTML = document.getElementById("is-checked").value;
        }
        else {
            replace.innerHTML = "Not Found";
        }
    }
    </script>

  </body>
</html>
